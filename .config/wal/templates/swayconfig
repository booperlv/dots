set $mod Mod4

set $left m
set $down comma
set $up period
set $right slash

set $term foot

# Clipboard manager
exec wl-paste -t text --watch clipman store

# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /home/booperlv/.cache/swaywal fill

# Picom ish thing
exec python3 /home/booperlv/.config/sway/swayfader/swayfader.py

### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

# Set the Keyboard Layout to Colemak
input * {{
    xkb_layout "us"
    xkb_variant "colemak"
    xkb_options "caps:backspace"
}}

# Set the Gaps or Margin
gaps inner 8

# Border, Remove Title Bar
default_border none

# Font
font pango:JetBrains Mono Nerd Font Bold 9

# Colors
set $fg {foreground} 
set $bg {background}
set $c0 {color0}
set $c1 {color1}
set $c2 {color2}
set $c3 {color3}
set $c4 {color4}
set $c5 {color5}
set $c6 {color6}
set $c7 {color7}
set $c8 {color8}
set $c9 {color9}
set $c10 {color10}
set $c11 {color11}
set $c12 {color12}
set $c13 {color13}
set $c14 {color14}
set $c15 {color15}

# class                 border  backgr. text indicator child_border
client.focused          $bg     $c3     $bg  $c5       $bg
client.focused_inactive $bg     $c3     $fg  $c5       $bg
client.unfocused        $bg     $c0     $fg  $c5       $bg
client.urgent           $bg     $c0     $fg  $c5       $bg
client.placeholder      $bg     $c0     $fg  $c5       $bg
client.background       $bg



### Key bindings



# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+q kill

# Start your launcher
bindsym $mod+d exec rofi -show drun -theme /home/booperlv/.cache/wal/rofiinputbar.rasi | xargs swaymsg exec --
bindsym $mod+g exec rofi -show drun -theme /home/booperlv/.cache/wal/rofinobar.rasi | xargs swaymsg exec --
bindsym $mod+p exec rofi -show power -theme /home/booperlv/.cache/wal/rofipowermenu.rasi | xargs swaymsg exec --
bindsym $mod+t exec rofi -dmenu -p 'Run Command' -theme /home/booperlv/.cache/wal/rofiterminal.rasi -lines 1 | xargs swaymsg exec --

# Mouse management
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Ctrl+r reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Ctrl+q exec swaymsg exit

# Change Wallpaper
mode "wallpaper select change refresh" {{
    bindsym c exec bash /home/booperlv/.config/sway/scripts/changewal.sh; mode default
    bindsym r exec bash /home/booperlv/.config/sway/scripts/resetcurrentwal.sh; mode default
    bindsym s exec bash /home/booperlv/.config/sway/scripts/changewalselect.sh; mode default
    
    bindsym space mode default
    bindsym q mode default
    bindsym $mod+backslash mode default
    bindsym escape mode default
}}
bindsym $mod+backslash mode "wallpaper select change refresh"

# Toggle Gaps and Borders
bindsym $mod+Ctrl+b border toggle
mode "gaps inner outer" {{
    bindsym i mode "gaps inner plus minus"
    bindsym o mode "gaps outer plus minus"
    
    bindsym space mode default
    bindsym q mode default
    bindsym $mod+Ctrl+b mode default
    bindsym escape mode default
}}
mode "gaps inner plus minus"  {{
    bindsym p gaps inner all plus 1
    bindsym m gaps inner all minus 1

    bindsym space mode default
    bindsym q mode default
    bindsym escape mode default
}}
mode "gaps outer plus minus" {{
    bindsym p gaps outer all plus 1
    bindsym m gaps outer all minus 1
    
    bindsym space mode default
    bindsym q mode default
    bindsym escape mode default
}}
bindsym $mod+Ctrl+g mode "gaps inner outer"

# Empty Window
bindsym $mod+x exec emptywindow


# Arrow Movement


# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# Ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Resize the focused window with the same, but add Ctrl
bindsym $mod+Ctrl+$left resize grow width 10px
bindsym $mod+Ctrl+$down resize grow height 10px
bindsym $mod+Ctrl+$up resize shrink height 10px
bindsym $mod+Ctrl+$right resize shrink width 10px
# Ditto, with arrow keys
bindsym $mod+Ctrl+Left resize grow width 10px
bindsym $mod+Ctrl+Down resize grow height 10px
bindsym $mod+Ctrl+Up resize shrink height 10px
bindsym $mod+Ctrl+Right resize shrink width 10px


# Workspaces:


# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10


# Layout stuff:


# Split windows
bindsym $mod+h splith
bindsym $mod+v splitv

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent


# Screenshots

mode "screenshot copy save" {{
    bindsym c mode "copy focus window screen output area"
    bindsym s mode "save focus window screen output area"
    
    bindsym space mode default
    bindsym q mode default
    bindsym escape mode default
}}
bindsym $mod+z mode "screenshot copy save"

# ScreenShot Sub Modes
mode "copy focus window screen output area" {{
    bindsym f exec grimshot --notify copy active; mode default
    bindsym w exec grimshot --notify copy window; mode default
    bindsym s exec grimshot --notify copy screen; mode default
    bindsym o exec grimshot --notify copy output; mode default
    bindsym a exec grimshot --notify copy area; mode default
    
    bindsym space mode default
    bindsym q mode default
    bindsym escape mode default
}}
mode "save focus window screen output area" {{
    bindsym f exec grimshot --notify save active /home/booperlv/Pictures/$(rofi -p 'file name' -dmenu -theme /home/booperlv/.cache/wal/rofiterminal.rasi) ; mode default
    bindsym w exec grimshot --notify save window /home/booperlv/Pictures/$(rofi -p 'file name' -dmenu -theme /home/booperlv/.cache/wal/rofiterminal.rasi) ; mode default
    bindsym s exec grimshot --notify save screen /home/booperlv/Pictures/$(rofi -p 'file name' -dmenu -theme /home/booperlv/.cache/wal/rofiterminal.rasi) ; mode default
    bindsym o exec grimshot --notify save output /home/booperlv/Pictures/$(rofi -p 'file name' -dmenu -theme /home/booperlv/.cache/wal/rofiterminal.rasi) ; mode default
    bindsym a exec grimshot --notify save area   /home/booperlv/Pictures/$(rofi -p 'file name' -dmenu -theme /home/booperlv/.cache/wal/rofiterminal.rasi) ; mode default
    
    bindsym space mode default
    bindsym q mode default
    bindsym escape mode default
}}


# Scratchpad:

    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show


# Status Bar:
exec waybar
bindsym $mod+b exec bash /home/booperlv/.config/waybar/scripts/togglelaunch.sh

# Gtk Fix:
set $gnome-schema org.gnome.desktop.interface

exec_always {{
    gsettings set $gnome-schema gtk-theme 'walgtk'
    gsettings set $gnome-schema icon-theme 'Vimix-Black'
    gsettings set $gnome-schema cursor-theme 'Vimix'
    gsettings set $gnome-schema font-name 'Cantarell 10'
}}

include /etc/sway/config.d/*
