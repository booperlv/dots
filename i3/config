set_from_resource $coloru i3wm.color1 "#1a1f25"
set_from_resource $color0 i3wm.color4 "#252a2f"
set_from_resource $color8 i3wm.color7 "#da3633"

# class                 border    backgr    text    indicator child_border
client.focused          $coloract $coloract $color15 $split  $coloract
client.focused_inactive #50595e	  $coloract $color15 $split  #50595e	  
client.unfocused        #50595e	  $colorin  $color15 $split  #50595e	
client.urgent           $coloru   $coloru   $color15 $coloru $coloru
client.placeholder      $color0   $color8   $color15 $color0 $color8
client.background       $color0
